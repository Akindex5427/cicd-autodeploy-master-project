- name: Build and Deploy Docker Container
  hosts: dockerservers
  gather_facts: false
  remote_user: root
  tasks:
#    - name: Copy the files to remote server
#      shell: scp -r /var/lib/jenkins/workspace/ansible-jenkins-pipeline/ root@3.22.6.214:~/project

    - name: Stopping the Container
      docker_container:
        name: php-container
        image: php:v1.0
        state: stopped

    - name: Removing the Container
      docker_container:
        name: php-container
        image: php:v1.0
        state: absent

    - name: Removing Docker Image
      docker_image:
        name: php:v1.0
        state: absent  
        
    - name: Building Docker Image
      docker_image:   
        name: php:v1.0
        source: build
        build:
          path: ~/project/
        state: present

    - name: Creating the Container
      docker_container:
        name: php-container
        image: php:v1.0
        ports:
          - "80:80"
        state: present
